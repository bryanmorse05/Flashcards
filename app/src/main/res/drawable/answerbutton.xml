<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
    <corners
        android:radius="30dp"
        />
    <gradient
        android:angle="90"
        android:centerX="0%"
        android:centerColor="#3380A1"
        android:startColor="#1B20B5"
        android:endColor="#0C147A"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <size
        android:width="270dp"
        android:height="60dp"
        />
    <stroke
        android:width="0dp"
        android:color="#7A7A7A"
        />
</shape>